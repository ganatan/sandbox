# --------------------------------------------------
# EXECUTION MODE
# --------------------------------------------------

# true  => use mocked local responses (from /mock folder)
# false => call real remote APIs (from /services folder)
USE_MOCK=true


# --------------------------------------------------
# LLM (Large Language Models) - Text-based AI
# --------------------------------------------------

# OpenAI (GPT-3.5, GPT-4, GPT-4-Turbo)
# Official API: https://platform.openai.com/docs
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxx

# Claude (Anthropic) – Claude 3 Opus / Sonnet
# Official API: https://docs.anthropic.com
ANTHROPIC_API_KEY=claude-xxxxxxxx

# Gemini (Google AI) – Gemini Pro / Gemini 1.5
# Official API: https://ai.google.dev
GEMINI_API_KEY=gemini-xxxxxxxx

# Mistral AI – Mistral 7B / Mixtral 8x7B
# Official API: https://docs.mistral.ai
MISTRAL_API_KEY=mistral-xxxxxxxx

# Perplexity AI – LLM + RAG-enhanced engine
# Official API: https://docs.perplexity.ai
PERPLEXITY_API_KEY=perplexity-xxxxxxxx

# DeepSeek – Open-source LLM for general use and code
# Official API or via https://together.ai
DEEPSEEK_API_KEY=deepseek-xxxxxxxx


# --------------------------------------------------
# TEXT-TO-SPEECH (TTS) – Voice AI
# --------------------------------------------------

# ElevenLabs – Realistic voice synthesis (multi-language)
# Official API: https://docs.elevenlabs.io
ELEVENLABS_API_KEY=eleven-xxxxxxxx


# --------------------------------------------------
# AVATARS / VIDEO AI – Face & Speech Animation
# --------------------------------------------------

# D-ID – Photo animation + voice sync (face talking)
# Official API: https://docs.d-id.com
D_ID_API_KEY=did-xxxxxxxx

# Heygen – Avatar-based video generation
# Official API: https://docs.heygen.com
HEYGEN_API_KEY=heygen-xxxxxxxx

# Jogg AI – Realistic talking avatar from photo
# Official API: https://jogg.ai (private access)
JOGGAI_API_KEY=joggai-xxxxxxxx


# --------------------------------------------------
# IMAGE AI – Text-to-Image Generation
# --------------------------------------------------

# Leonardo AI – High-quality image generation for concept art and product design
# API: https://docs.leonardo.ai
LEONARDO_API_KEY=leonardo-xxxxxxxx

# MidJourney – No official API, only via Discord bot integration
# Use with caution (limited control, rate-limited by Discord)
MIDJOURNEY_API_KEY=discord-bot-xxxxxxxx  # optional, unofficial

# Kling AI – Video generation from text
# No official API yet – placeholder if access becomes available
KLING_API_KEY=kling-xxxxxxxx  # optional, unofficial or future use


# --------------------------------------------------
# AGENTS – Autonomous LLM-based Agents & Orchestration
# --------------------------------------------------

# LangChain – Framework pour construire des agents intelligents
# Utilisé en local, mais supporte aussi LangSmith pour le tracking
LANGCHAIN_API_KEY=optional-or-blank

# LlamaIndex – Mémoire contextuelle, knowledge base pour LLMs
# API: https://docs.llamaindex.ai
LLAMAINDEX_API_KEY=llamaindex-xxxxxxxx


# --------------------------------------------------
# MUSIC AI – Génération de musique et chansons
# --------------------------------------------------

# Suno AI – Génération de chansons avec paroles, musique et voix
# API non officielle – nécessite un cookie utilisateur pour fonctionner
SUNO_COOKIE=suno-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWOCAPTCHA_KEY=2captcha-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
BROWSER=chromium
BROWSER_GHOST_CURSOR=false
BROWSER_LOCALE=en
BROWSER_HEADLESS=true

# Udio AI – Génération de musique vocale de qualité
# API non officielle – nécessite un token utilisateur
UDIO_AUTH_TOKEN=udio-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
